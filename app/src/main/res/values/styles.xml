<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>


    <!-- - - - - - - - - - - - - - -->
    <!-- - - Detail activity - - - -->
    <!-- - - - - - - - - - - - - - -->
    <!-- - - - Main Titles - - - - -->
    <style name="detail_main_titles">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingTop">@dimen/margin_xsmall</item>
        <item name="android:paddingBottom">@dimen/margin_xsmall</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>
    <!-- - - - -  Titles - - - - - -->
    <style name="detail_titles">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- - - -  Main Text  - - - - -->
    <style name="detail_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:hyphenationFrequency">none</item>
    </style>

    <!-- - - -  Rating Bar - - - - -->
    <style name="detail_rating_Bar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <!-- - - - Linear Layout  -  - -->
    <style name="detail_linear_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">left</item>
    </style>

</resources>
